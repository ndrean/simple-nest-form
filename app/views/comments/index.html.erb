<p id="notice"><%= notice %></p>
<p>#views/comments/index.html.erb</p>
<h1>Comments for Post # <%= @post.id %></h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr data-comment-id="<%= comment.id %>">
        <td><%= comment.body %></td>
        <td><%= comment.post_id %></td>
        <td><%= link_to 'Show Post', @post %></td>
        <td><%= link_to 'Edit', edit_post_comment_path(@post, comment) %></td>
        <td><%= link_to 'Erase', [@post, comment], url: "erase/#{comment.id}", method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back to all Posts', posts_path, class:"badge badge-info", style:"color:white;font-size:16px;" %> |

<%= link_to 'New Comment (with custom"save")', new_post_comment_path, class:"badge badge-info", style:"color:white;font-size:16px;" %> 

